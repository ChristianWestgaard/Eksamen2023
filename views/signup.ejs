<%- include('partials/header.ejs') %>

<h1 class="headerText">Sign Up</h1>

<div class="getinDiv">
    <form action="/signup" method="post">
        <h3>What is your</h3>
        <input class="getinInput" name="email" type="text" placeholder="Email">
        <div class="email error"></div>
        <h3>What is your</h3>
        <input class="getinInput" name="password" type="password" placeholder="Password?">
        <div class="password error"></div>
        <h3>Confirm password</h3>
        <input class="getinInput" name="repeatPassword2" type="password" placeholder="Confirm password">
        <div class="nonmirror error"></div>
        <br><br>

        <button type="submit">Sign-up</button>

    </form>
    <div class="linkDiv">
        <a class="alreadyLink" href="login">Har du en bruker?</a>
    </div>
</div>
<script>
    const form = document.querySelector('form');
    const emailError = document.querySelector('.email.error')
    const passwordError = document.querySelector('.password.error')
    const nonmirrorError = document.querySelector('.nonmirror.error')

    form.addEventListener('submit', async (e) => {
        e.preventDefault();

        emailError.textContent = '';
        passwordError.textContent = '';
        nonmirrorError.textContent = '';

        //get the values
        const email = form.email.value;
        const password = form.password.value;
        const repeatPassword = form.password.value;

        try{
            const result = await fetch('/signup', {
                method: 'POST',
                body: JSON.stringify({ email, password }),
                headers: { 'Content-Type': 'application/json'}
            });

            const data = await result.json();
            console.log(data);
            if(data.errors){ 
                emailError.textContent = data.errors.email;
                passwordError.textContent = data.errors.password;
            }
            if(password != repeatPassword){
                nonmirrorError.textContent = "These passwords do not match"
            }
            if (data.user){
                location.assign(`/home/${email}`);
            }
        } catch(err) {
            console.log(err);
        }
    });
</script>
